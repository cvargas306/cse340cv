<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>
<form class="input-box" id="deleteForm" action="/inv/delete" method="post">
    <label>Make
        <input type="text" value="<%- locals.inv_make || '' %>" readonly>
    </label>
    
    <label>Model
        <input type="text" value="<%- locals.inv_model || '' %>" readonly>
    </label>
    
    <label>Year
        <input type="number" value="<%- locals.inv_year || '' %>" readonly>
    </label>
    
    <label>Price
        <input type="number" value="<%- locals.inv_price || '' %>" readonly>
    </label>
    <p>Confirm Deletion - The delete is permanent.</p>
    <input type="submit" value="Delete Vehicle">
    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
</form>
