<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<% if (loggedin) { %>
  <div class="account-management">
    <!-- 1. Greeting (for ALL users) -->
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <p>You're logged in.</p> 

    <!-- 2. Update link (REQUIRED for all) -->
    <p>
      <a href="/account/update/<%= accountData.account_id %>" class="update-link">
        Update Account Information
      </a>
    </p>

    <!-- 3. SERVICE REQUESTS SECTION -->
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <!-- Staff View: Show Queue Link -->
      <div class="service-section">
        <h3>Service Requests</h3>
        <ul>
          <li><a href="/service/queue">View Service Request Queue</a></li>
        </ul>
      </div>
    <% } else { %>
      <!-- Client View: Show Submit/View Links -->
      <div class="service-section">
        <h3>Service Requests</h3>
        <ul>
          <li><a href="/service/request">Submit New Service Request</a></li>
          <li><a href="/service/my-requests">View My Service Requests</a></li>
        </ul>
      </div>
    <% } %>

    <!-- 4. Inventory section (ONLY for Employee/Admin) -->
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <div class="inventory-section">
        <h3>Inventory Management</h3> 
        <p><a href="/inv" class="inventory-link">Manage Inventory</a></p> 
      </div>
    <% } %>
  </div>
<% } %>
  
